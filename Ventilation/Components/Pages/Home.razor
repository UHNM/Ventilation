@using Ventilation.Components.Shared.FindComponents
@page "/"
@rendermode InteractiveServer
@using Ventilation.Components.Shared

<PageTitle>Ventilation System</PageTitle>

<Modal @ref="modal"
       UseStaticBackdrop="true"
       CloseOnEscape="false"
       Size="ModalSize.ExtraLarge">

    <BodyTemplate>

    </BodyTemplate>

    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Close</Button>

    </FooterTemplate>

</Modal>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h4>Patients</h4>
        </div>
        <div class="col-sm-9">
            
        </div>
        <div class="col-sm nhsuk-u-float-right">
             <Button Color="ButtonColor.Success" Size="ButtonSize.Small" @onclick="OnAddPatientClick"><Icon Name="IconName.PlusSquare" /></Button>
        </div>
    </div>
</div>

<FindPatientLoan/>

<div>

    @foreach (var loan in patientList)
    { 
        <PatientListDetail paramPatientListItem="loan"></PatientListDetail>
    } 
   
</div>






