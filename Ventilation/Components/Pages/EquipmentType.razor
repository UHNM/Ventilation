@page "/equipmenttype"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject NavigationManager _navigationManager;

<h3>Equipment Types</h3>


<p>Administrator only --   List, add , edit or delete a type of equipment. The type is for example Ventilator or mask</p> 
<p>This could be a phase 2 development with entries added to the db manually for now..</p>
<button class="btn btn-success" @onclick='() => _navigationManager.NavigateTo("/equipmenttype/add")'>Add Type</button>

<QuickGrid Class="table" Items="type" Pagination="state">
      
        <PropertyColumn Property="@(p => p.EquipmentTypeName)" Sortable="true" Title="name" ></PropertyColumn>
        <PropertyColumn Property="@(p => p.CreatedDate)" Format="MM/dd/yyyy" Sortable="true" Title="CreatedDate" />
    <TemplateColumn  Title="Edit">
        <ColumnOptions>
            <div>
                <a href="/equipmenttype/edit">Edit</a>
            </div>
        </ColumnOptions>
    </TemplateColumn>
    </QuickGrid>
    <Paginator State="state" />