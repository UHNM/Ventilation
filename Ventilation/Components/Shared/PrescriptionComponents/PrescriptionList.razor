@using Ventilation.Components.Shared.PrescriptionComponents
@rendermode InteractiveServer
@using Domain.Models

@if (paramLoan != null)
{

    <Grid TItem="Prescription"
          Class="table table-hover table-bordered table-striped"
          DataProvider="PrescriptionsDataProvider"
          AllowPaging="false"
          FixedHeader="true"
          Responsive="true"
          >

        <GridColumns>
            <GridColumn TItem="Prescription" HeaderText="Prescription Date" PropertyName="PrescriptionDate" SortKeySelector="item => item.PrescriptionDate">
                @context.PrescriptionDate.ToString("dd/MM/yyyy")
            </GridColumn>
            <GridColumn TItem="Prescription" HeaderText="Loan Id" PropertyName="LoanId" SortKeySelector="item => item.LoanId">
                @context.LoanId
            </GridColumn>
            @if (paramIsEdit == true)
            {
                <GridColumn  TItem="Prescription" Filterable="false" HeaderText="Select" HeaderTextAlignment="Alignment.Center" PropertyName="Id">
                    <Button Color="ButtonColor.Secondary" Size="ButtonSize.Small" Outline="true" @onclick="@(()=> OnSelectPrescriptionClick(@context))">Select</Button>
               
            </GridColumn>
            }
        </GridColumns>

    </Grid>



  

}





