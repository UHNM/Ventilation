@rendermode InteractiveServer

<div class="row mb-3">
    <label class="col-sm-2 col-form-label">@controlLabel</label>
    <div class="col-sm-4">
        <InputSelect @bind-Value=@viewModelProperty.ResponseString class="form-control">
        @if (controlOptions != null){
            @foreach (var option in controlOptions)
            {
                <option value=@option.Value>@option.Text</option>
            }
        }
       
       
    </InputSelect>
    </div>
</div>