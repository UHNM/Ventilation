@inject NavigationManager _navigationManager;
@rendermode InteractiveServer

<Tabs>
    <Tab Title="Patient Demographics" Active="true">
        <Content>

            <div class="border border-dark">


                <EditForm Model="@patientToFind" OnSubmit="OnFindClick">
                    <InputText id="hospNumber" @bind-Value="@patientToFind.HospitalNumber"></InputText>
                    <button Type="submit" class="btn btn-primary">Find</button>

                </EditForm>
                @if (showPatient)
                {
                    <div class="row">
                        <div class="col">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Hospital Number:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.HospitalNumber" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    NHS Number:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.NHSNumber" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Surname:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.Surname" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Forename:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.Forename" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Address:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.Address1, @patientFound.Address2 , @patientFound.Address3, @patientFound.Address4, @patientFound.PostCode" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Date of Birth:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.DateofBirth" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Home Tel:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.Telephone1" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Mobile Tel:
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled value="@patientFound.Telephone2" />
                                </div>
                            </div>

                        </div>


                    </div>

                    <Button Color="ButtonColor.Success" @onclick='() => _navigationManager.NavigateTo("/patient/detail/1023887")'>Next</Button>
                }


            </div>
        </Content>
    </Tab>
   
   
    
</Tabs>


