@rendermode InteractiveServer
<div class="border border-dark">
   

    <EditForm Model="@loanDetail" >
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                Clinical Tech Ref:
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" disabled value="@loanDetail.ClinicalReference" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                Name:
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" disabled value="@loanDetail.EquipmentName" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                Serial Number:
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" disabled value="@loanDetail.SerialNumber" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                Loan Date:
            </label>
            <div class="col-sm-8">
                <InputDate id="loanDate" @bind-Value="@loanDetail.LoanDate"></InputDate>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                Service Date:
            </label>
            <div class="col-sm-8">
                <InputDate id="serviceDate" disabled @bind-Value="@loanDetail.ServiceDate"></InputDate>
            </div>
        </div>

       
        <button Type="submit" class="btn btn-primary">Save</button>
    </EditForm>
</div>


